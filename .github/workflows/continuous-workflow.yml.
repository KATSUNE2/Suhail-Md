name: Trigger Every 5 Hours

on:
  schedule:
    - cron: '0 */5 * * *'  # This triggers the workflow every 5 hours

jobs:
  run-task:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2
        
      - name: Run a Task
        run: |
          echo "This task runs every 5 hours."
          # Add your long-running task or script here
